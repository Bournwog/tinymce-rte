        "type": "textarea",
        "area": "tinymcerte.style_formats"
      },
      {
        "key": "blocks_format",
        "value": "[{\"title\": \"Paragraph\", \"format\": \"p\"},{\"title\": \"Blockquote\", \"format\": \"blockquote\"},{\"title\": \"Div\", \"format\": \"div\"},{\"title\": \"Pre\", \"format\": \"pre\"}]",
